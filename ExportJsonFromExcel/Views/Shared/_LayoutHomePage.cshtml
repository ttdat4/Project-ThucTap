                <img src="/Content/tools_Evf_icon.ico" alt="" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">@ViewBag.Title</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
