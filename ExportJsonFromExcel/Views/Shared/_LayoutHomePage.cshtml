                <h5>Control</h5>
                @{
                    var controllViewName = ViewBag.Controll as string;

                }

                @if (!string.IsNullOrEmpty(controllViewName))
                {
                    Html.RenderPartial(controllViewName);
                }
                else
                {
                    <p>No View</p>
                }

            </div>
        </aside>
        <!-- /.control-sidebar -->
